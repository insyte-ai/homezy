{
  "name": "homezy",
  "version": "0.1.0",
  "description": "AI-First Home Improvement Marketplace for UAE",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"yellow,cyan\" \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "clean": "rm -rf node_modules server/node_modules client/node_modules",
    "setup": "npm run install-all && cp server/.env.example server/.env",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
